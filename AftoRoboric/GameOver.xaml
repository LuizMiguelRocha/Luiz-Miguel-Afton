<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AftoRoboric.GameOver"
             Shell.NavBarIsVisible="false">

            <Grid>
                <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

            <Frame BackgroundColor="#044a36"
                Margin="5, 10"
                VerticalOptions="Fill"
                Grid.Row="0">   

            <Label Text="Gama Over! Você ira continuar?"
                TextColor="White"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                VerticalOptions="Center"
                FontSize="50"/>
            </Frame>

            <Button Text="Sim"
                    Clicked="BotaoYes"
                    BackgroundColor="#2f7863"
                    TextColor="White"
                    Margin="0,0,0,8"
                    Grid.Row="1"/>

            <Button Text="Não"
                    Clicked="BotaoNao"
                    BackgroundColor="#2f7863"
                    TextColor="White"
                    Margin="0,0,0,8"
                    Grid.Row="2"/>      
            </Grid>
</ContentPage>